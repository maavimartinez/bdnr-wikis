
<%= form_with url: '/auth/login' do |form| %>
  
    <div class="field">
      <%= form.text_field :username , class: 'loginField', placeholder: 'Username'%>
    </div>
  
    <div class="field">
      <%= form.password_field :password, class: 'loginField', placeholder: 'Password' %>
    </div>
  
    <a class="card-link actions">
      <%= form.submit %>
    </a>
<% end %>
  