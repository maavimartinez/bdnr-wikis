<div class="repos-page">
<div class="navbarr">
<h2 class="navbar-title">GitHub</h2>
<h2 class="navbar-title"><%=@current_user['username'] %></h2>
</div>
<div class="wikis-card">
<h2 class="user-name"><%=@repository['name']%></h2>
<div class="repo-row">
<h1 class="pages-title">Pages</h1> <%= link_to 'New Page', {controller:'pages', action:'newPage', wiki_id:@wiki.id}, class:'new-page-link'%>
</div>
<p id="notice"><%= notice %></p>
<div class="repo-row">

<table class="table-pages">
  <thead>
    <tr>
      <th class="th-title">Titulo</th>
      <th class="th-content">Contenido</th>
      <th class="th-message">Mensaje</th>
      <th class="th-date">Última fecha de modificación</th>
      <th class="th-action"colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td class="th-title"><%= page.title %></td>
        <td class="th-content"><%= page.content %></td>
        <td class="th-message"><%= page.message %></td>
        <td class="th-date"><%= page.last_modification_date.strftime("%d/%m/%Y %k:%M")%></td>
        <td class="th-action"><%= link_to 'Show', page,class:'action-repo-link' %></td>
        <td><%= link_to 'Edit', edit_page_path(page) ,class:'action-repo-link'%></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
</div>
